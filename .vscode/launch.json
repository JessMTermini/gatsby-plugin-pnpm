	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Jest",
			"skipFiles": [
				"<node_internals>/**"
      ],
      "runtimeArgs": [
        "--nolazy",
        "--inspect-brk"
      ],
			"program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true
		}
	]
}